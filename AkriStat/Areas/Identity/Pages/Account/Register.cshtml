@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="register-box" style="margin: 0 auto;">
    <div class="register-logo">
        <b>Akri</b>Stat
    </div>

    <div class="card">
        <div class="card-body register-card-body">
            <p class="login-box-msg">Register</p>

            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div class="input-group mb-3">
                    <input asp-for="Input.FirstName" type="text" class="form-control" placeholder="First name">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-user"></span>
                        </div>
                    </div>
                </div>
                @*<span asp-validation-for="Input.FirstName" class="text-danger"></span>*@
                <div class="input-group mb-3">
                    <input asp-for="Input.Surname" type="text" class="form-control" placeholder="Surname">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-user"></span>
                        </div>
                    </div>
                </div>
                @*<span asp-validation-for="Input.Surname" class="text-danger"></span>*@
                <div class="input-group mb-3">
                    <input asp-for="Input.Email" type="email" class="form-control" placeholder="Email">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>
                @*<span asp-validation-for="Input.Email" class="text-danger"></span>*@
                <div class="input-group mb-3">
                    <input asp-for="Input.Password" type="password" autocomplete="new-password" class="form-control" placeholder="Password">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>
                @*<span asp-validation-for="Input.Password" class="text-danger"></span>*@
                <div class="input-group mb-3">
                    <input asp-for="Input.ConfirmPassword" type="password" autocomplete="new-password" class="form-control" placeholder="Retype password">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <select asp-for="Input.FavouriteTeamId" asp-items="Model.TeamsSelectList" class="selectpicker form-control" 
                            title="Favourite team" data-live-search="true" data-live-search-normalize="true"></select>
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-heart"></span>
                        </div>
                    </div>
                </div>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="row">
                    <div class="col-8">
                    </div>
                    <div class="col-4">
                        <button type="submit" class="btn btn-primary btn-block">Register</button>
                    </div>
                </div>
            </form>

            @*<div class="social-auth-links text-center">
                    <p>- OR -</p>
                    <a href="#" class="btn btn-block btn-primary">
                        <i class="fab fa-facebook mr-2"></i>
                        Sign up using Facebook
                    </a>
                    <a href="#" class="btn btn-block btn-danger">
                        <i class="fab fa-google-plus mr-2"></i>
                        Sign up using Google+
                    </a>
                </div>*@

            <a asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-center">I already have an account</a>
        </div>
        <!-- /.form-box -->
    </div><!-- /.card -->
</div>

