@model AkriStat.ViewModels.Player.Summary.BarsVM

<div class="progress-group">
    <span class="progress-text">Shots on Target Rate</span>
    <span class="float-right"><b>@Model.ShotsOnTarget</b>/@Model.Shots</span>
    <div class="progress progress-sm">
        <div class="progress-bar bg-forward" role="progressbar" style="width: @Model.ShotsOnTargetPercentage%" aria-valuenow="@Model.ShotsOnTarget" aria-valuemin="0" aria-valuemax="@Model.Shots"></div>
    </div>
</div>
<div class="progress-group">
    <span class="progress-text">Successful Dribbles</span>
    <span class="float-right"><b>@Model.SuccessfulDribbles</b>/@Model.DribblesAttempted</span>
    <div class="progress progress-sm">
        <div class="progress-bar bg-forward" role="progressbar" style="width: @Model.SuccessfulDribblesPercentage%" aria-valuenow="@Model.SuccessfulDribbles" aria-valuemin="0" aria-valuemax="@Model.DribblesAttempted"></div>
    </div>
</div>
<div class="progress-group">
    <span class="progress-text">Passing Success</span>
    <span class="float-right"><b>@Model.PassesCompleted</b>/@Model.PassesAttempted</span>
    <div class="progress progress-sm">
        <div class="progress-bar bg-forward" role="progressbar" style="width: @Model.PassesCompletedPercentage%" aria-valuenow="@Model.PassesCompleted" aria-valuemin="0" aria-valuemax="@Model.PassesAttempted"></div>
    </div>
</div>
<div class="progress-group">
    <span class="progress-text">Successful Pressures</span>
    <span class="float-right"><b>@Model.SuccessfulPressures</b>/@Model.Pressures</span>
    <div class="progress progress-sm">
        <div class="progress-bar bg-forward" role="progressbar" style="width: @Model.SuccessfulPressuresPercentage%" aria-valuenow="@Model.SuccessfulPressures" aria-valuemin="0" aria-valuemax="@Model.Pressures"></div>
    </div>
</div>
<div class="progress-group">
    <span class="progress-text">Aerial Duals Won</span>
    <span class="float-right"><b>@Model.AerialDualsWon</b>/@Model.AerialDuals</span>
    <div class="progress progress-sm">
        <div class="progress-bar bg-forward" role="progressbar" style="width: @Model.AerialDualsWonPercentage%" aria-valuenow="@Model.AerialDualsWon" aria-valuemin="0" aria-valuemax="@Model.AerialDuals"></div>
    </div>
</div>
<div class="row">
    <div class="col-6" style="text-align:center">
        <h5>Goal Creating Actions</h5>
        <div id="goalCreatingActionsPie"></div>
    </div>
    <div class="col-6" style="text-align:center">
        <h5>Shot Creating Actions</h5>
        <div id="shotCreatingActionsPie"></div>
    </div>
</div>

<script>
    Highcharts.chart('goalCreatingActionsPie', {
        chart: {
            plotBackgroundColor: null,
            plotBorderWidth: null,
            plotShadow: false,
            type: 'pie',
            height: 200,
            margin: [0, 0, 0, 0]
        },
        credits: {
            enabled: false
        },
        title: {
            text: ''
        },
        tooltip: {
            pointFormat: '<b>{point.y}</b> - {point.percentage:.0f}%'
        },
        accessibility: {
            point: {
                valueSuffix: '%'
            }
        },
        plotOptions: {
            pie: {
                allowPointSelect: true,
                cursor: 'pointer',
                dataLabels: {
                    enabled: false,
                    format: '<b>{point.name}</b>'
                }
            }
        },
        series: [{
            colorByPoint: true,
            data: [{
                name: 'Passes (Live Ball)',
                y: @Model.PassesCompletedLiveBallLeadingToGoal
            }, {
                name: 'Passes (Dead Ball)',
                y: @Model.PassesCompletedDeadBallLeadingToGoal
            }, {
                    name: 'Dribbles',
                y: @Model.DribblesLeadingToGoal
            }, {
                    name: 'Shots',
                y: @Model.ShotsLeadingToAnotherGoal
            }, {
                    name: 'Fouls Drawn',
                y: @Model.FoulsDrawnLeadingToGoal
            }]
        }],
        exporting: {
            enabled: false
        }
    });

    Highcharts.chart('shotCreatingActionsPie', {
        chart: {
            plotBackgroundColor: null,
            plotBorderWidth: null,
            plotShadow: false,
            type: 'pie',
            height: 200,
            margin: [0, 0, 0, 0]
        },
        credits: {
            enabled: false
        },
        title: {
            text: ''
        },
        tooltip: {
            pointFormat: '<b>{point.y}</b> - {point.percentage:.0f}%'
        },
        accessibility: {
            point: {
                valueSuffix: '%'
            }
        },
        plotOptions: {
            pie: {
                allowPointSelect: true,
                cursor: 'pointer',
                dataLabels: {
                    enabled: false,
                    format: '<b>{point.name}</b>'
                }
            }
        },
        series: [{
            colorByPoint: true,
            data: [{
                name: 'Passes (Live Ball)',
                y: @Model.PassesCompletedLiveBallLeadingToShot
            }, {
                name: 'Passes (Dead Ball)',
                y: @Model.PassesCompletedDeadBallLeadingToShot
            }, {
                    name: 'Dribbles',
                y: @Model.DribblesLeadingToShot
            }, {
                    name: 'Shots',
                y: @Model.ShotsLeadingToAnotherShot
            }, {
                    name: 'Fouls Drawn',
                y: @Model.FoulsDrawnLeadingToShot
            }]
        }],
        exporting: {
            enabled: false
        }
    });
</script>