@model AkriStat.ViewModels.Account.AccountDetailsVM

<form action="/Account/Edit" class="form-center" method="post">
    <div class="row">
        <div class="col-12">
            <h1 style="text-align:center"><b>Edit Account</b></h1>
            <div class="form-group">
                @Html.LabelFor(x => x.FirstName, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(x => x.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Surname, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(x => x.Surname, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Surname, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.FavouriteTeamId, htmlAttributes: new { @class = "control-label" })
                <select asp-for="FavouriteTeamId" asp-items="@Model.TeamsSelectList" class="selectpicker form-control" data-live-search="true" data-live-search-normalize="true"></select>
                @Html.ValidationMessageFor(model => model.FavouriteTeamId, "", new { @class = "text-danger" })
            </div>
            <button type="submit" class="btn btn-primary float-right">Save</button>
        </div>
    </div>
</form>

<script>
    setBackButton('Account Menu', '/Account');
    $('.selectpicker').selectpicker(defaultSelectSettings);
</script>

@if (ViewBag.ChangesSaved != null && ViewBag.ChangesSaved == true)
{
    <script>
        toastr.success('Changes Saved. You will need to log out and back in for changes to be visible.');
    </script>
}

