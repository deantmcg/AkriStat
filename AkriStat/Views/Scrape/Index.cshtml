                    <div class="icon">
                        <i class="fas fa-folder-plus" style="position:inherit"></i>
                    </div>
                </div>
            </div>
        </a>
    </div>
    <div class="col-lg-4 col-6">
        <a asp-action="BatchIndex">
            <div class="small-box bg-purple">
                <div class="inner" style="text-align:center">
